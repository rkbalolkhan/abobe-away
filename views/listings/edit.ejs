<% layout('/layouts/boilerplate.ejs') -%>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit Your Listing</h3>
      <form
        action="/listings/<%=listing._id%>?_method=PUT"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"

      >
        <div class="mb-3">
          <label for="listing[title]" class="form-lable">Title</label>
          <input
            name="listing[title]"
            value="<%=listing.title%>"
            type="text"
            class="form-control"
            required
          />
          <p class="invalid-feedback">Please enter Valid Title</p>
        </div>
        <br /><br />

        <div class="mb-3">
          <label for="listing[description]" class="form-lable"
            >Description</label
          >
          <textarea name="listing[description]" class="form-control" required>
<%=listing.description%></textarea
          >
          <p class="invalid-feedback">Please enter Valid Description</p>
        </div>
        <br /><br />

        <div class="row">
          <div class="mb-3">
            <p>Current Image:</p>
            <img class="rounded preview-curr-image" src="<%=currListingImage%>" />
          </div>

          <div class="mb-3">
            <label for="listing[image]" class="form-lable"
              >Upload Cover Image</label
            >
            <input name="listing[image]" type="file" class="form-control" />
            <p class="invalid-feedback">
              Please upload in valid (JPG,JPEG or PNG) format only
            </p>
          </div>
        </div>
        <br /><br />

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="listing[price]" class="form-lable">Price</label>
            <input
              name="listing[price]"
              value="<%=listing.price%>"
              type="number"
              class="form-control"
              required
            />
            <p class="invalid-feedback">Please enter Price</p>
          </div>
          <br /><br />

          <div class="mb-3 col-md-8">
            <label for="listing[country]" class="form-lable">Country</label>
            <input
              name="listing[country]"
              value="<%=listing.country%>"
              type="text"
              class="form-control"
              required
            />
            <p class="invalid-feedback">Please enter Country Name</p>
          </div>
        </div>
        <br /><br />

        <div class="mb-3">
          <label for="listing[location]" class="form-lable">Location</label>
          <input
            name="listing[location]"
            value="<%=listing.location%>"
            type="text"
            class="form-control"
            required
          />
          <p class="invalid-feedback">Please enter Location</p>
        </div>

        <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
      </form>
    </div>
  </div>
</body>
