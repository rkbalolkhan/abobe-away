<% layout('/layouts/boilerplate.ejs') -%>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit Your Listing</h3>
      <form action="/listings/<%=listing._id%>?_method=PUT" method="post">
        <div class="mb-3">
          <label for="listing[title]" class="form-lable">Title</label>
          <input
            name="listing[title]"
            value="<%=listing.title%>"
            type="text"
            class="form-control"
          />
        </div>
        <br /><br />

        <div class="mb-3">
          <label for="listing[description]" class="form-lable"
            >Description</label
          >
          <textarea name="listing[description]" class="form-control">
    <%=listing.description%></textarea
          >
        </div>
        <br /><br />

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="listing[image][filename]" class="form-lable"
              >Image File Name</label
            >
            <input
              name="listing[image][filename]"
              value="<%=listing.image.filename%>"
              type="text"
              class="form-control"
            />
          </div>

          <div class="mb-3 col-md-8">
            <label for="listing[image][url]" class="form-lable"
              >Image URL/ Link</label
            >
            <input
              name="listing[image][url]"
              value="<%=listing.image.url%>"
              type="text"
              class="form-control"
            />
          </div>
        </div>
        <br /><br />

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="listing[price]" class="form-lable">Price</label>
            <input
              name="listing[price]"
              value="<%=listing.price%>"
              type="number"
              class="form-control"
            />
          </div>
          <br /><br />

          <div class="mb-3 col-md-8">
            <label for="listing[country]" class="form-lable">Country</label>
            <input
              name="listing[country]"
              value="<%=listing.country%>"
              type="text"
              class="form-control"
            />
          </div>
        </div>
        <br /><br />

        <div class="mb-3">
          <label for="listing[location]" class="form-lable">Location</label>
          <input
            name="listing[location]"
            value="<%=listing.location%>"
            type="text"
            class="form-control"
          />
        </div>

        <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
      </form>
    </div>
  </div>
</body>
